$(document).ready(function() {
    $('#init-201').click(function() {
        var url = "https://alquitran.ing.puc.cl/transactions/";
        var data = {
            "application_token": "9c00e472-c119-431e-97fa-019a30ebc783",
            "kredit_card": {
                "card_number": "9a4576d3-83a7-4d58-a4d2-f32f201f6e34",
                "card_cvv": 123,
                "card_holder": {
                    "first_name": "Pedro",
                    "last_name": "Saratscheff"
                }
            },
            "to_charge": {
                "currency": "CLP",
                "amount": 1
            }
        }
        function success(data) { $('#initResult').html('<h1>Success</h1>' + JSON.stringify(data)); }
        function error(data) {   $('#initResult').html('<h1>ERROR</h1>' + JSON.stringify(data));   }
        $.ajax({
            type: "POST",
            url: url,
            data: data,
            success: success,
            error: error,
            dataType: 'application/json'
        });
    });
    $('#init-201').removeClass('disabled');
    $('#init-400').click(function() {
        $.post("https://alquitran.ing.puc.cl/transactions/", {
                "400test": true
            })
            .done(function(data) {
                alert("success " + JSON.stringify(data));
            })
            .fail(function(data) {
                alert("error " + JSON.stringify(data));
            })
            .always(function() {
                // always runs
            });
    });
    $('#init-400').removeClass('disabled');
    $('#init-401').click(function() {
        $.post("https://alquitran.ing.puc.cl/transactions/", {
                "application_token": "EfESn-T5Tsz@yE4^YS7h8b+UAtjtjt",
                "kredit_card": {
